# =====================================
# English Tutor Voice Agent - Environment Variables
# MVP Configuration (Minimal Setup)
# =====================================

# LiveKit Server Configuration
# Получите на https://livekit.io → Settings → Keys & Tokens
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_api_secret_here

# n8n Webhook Configuration
# Внутренний адрес в Docker сети или внешний URL
N8N_WEBHOOK_URL=http://n8n:5678/webhook/your-generic-webhook
N8N_NEWS_WEBHOOK_URL=https://your-n8n-instance.com/webhook/news/today
# Если n8n на том же сервере и DNS глючит, установите True для обращения к http://127.0.0.1:5678
N8N_USE_LOCAL=True

# Email Configuration (for reports and tools)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-app-password
ADMIN_EMAIL=recipient-email@gmail.com

# Google Gemini AI
# Получите на https://aistudio.google.com/apikey
GOOGLE_API_KEY=your_google_api_key_here
# =====================================

# ВАЖНО ДЛЯ ЛОКАЛЬНОГО ЗАПУСКА:
