{
    "name": "Smart Funnel (Jina Pro)",
    "nodes": [
        {
            "parameters": {
                "rule": {
                    "interval": [
                        {
                            "field": "cronExpression",
                            "expression": "0 6 * * *"
                        }
                    ]
                }
            },
            "type": "n8n-nodes-base.scheduleTrigger",
            "typeVersion": 1.2,
            "position": [
                0,
                0
            ],
            "id": "trigger_node",
            "name": "Schedule Trigger"
        },
        {
            "parameters": {
                "query": "news",
                "searchDepth": "advanced",
                "options": {
                    "max_results": 10,
                    "include_domains": "reuters.com, bbc.com, nytimes.com, theguardian.com, bloomberg.com, techcrunch.com, wired.com, apnews.com"
                }
            },
            "type": "n8n-nodes-tavily.tavily",
            "typeVersion": 1,
            "position": [
                200,
                0
            ],
            "id": "tavily_node",
            "name": "Tavily Search",
            "credentials": {
                "tavilyApi": {
                    "id": "nIPqN3hx3KIadVwK",
                    "name": "Tavily account"
                }
            }
        },
        {
            "parameters": {
                "fieldToSplitOut": "results",
                "options": {}
            },
            "type": "n8n-nodes-base.splitOut",
            "typeVersion": 1,
            "position": [
                400,
                0
            ],
            "id": "split_node",
            "name": "Split Out"
        },
        {
            "parameters": {
                "url": "=https://r.jina.ai/{{ $json.url }}",
                "sendHeaders": true,
                "headerParameters": {
                    "parameters": [
                        {
                            "name": "Accept",
                            "value": "application/json"
                        }
                    ]
                },
                "options": {}
            },
            "type": "n8n-nodes-base.httpRequest",
            "typeVersion": 4.1,
            "position": [
                600,
                0
            ],
            "id": "jina_node",
            "name": "Jina Reader"
        },
        {
            "parameters": {
                "jsCode": "const items = $input.all();\n\nfor (const item of items) {\n  let text = item.json.data?.content || '';\n  \n  // 1. Deduplication (remove repeated paragraphs common in aggregated sources)\n  const paragraphs = text.split('\\n').filter(p => p.trim().length > 0);\n  const uniqueParagraphs = [];\n  const seen = new Set();\n  \n  for (const p of paragraphs) {\n    const trimmed = p.trim();\n    if (!seen.has(trimmed)) {\n      uniqueParagraphs.push(p);\n      seen.add(trimmed);\n    }\n  }\n  \n  text = uniqueParagraphs.join('\\n\\n');\n\n  // 2. Final quality filtering\n  if (text.length >= 500) {\n    item.json.cleanText = text;\n    item.json.title = (item.json.data?.title || item.json.title || 'No Title').trim();\n    item.json.url = item.json.data?.url || item.json.url;\n    item.json.publishedDate = new Date().toISOString();\n  } else {\n    item.json.cleanText = '';\n  }\n}\n\nreturn items.filter(item => item.json.cleanText !== '');"
            },
            "type": "n8n-nodes-base.code",
            "typeVersion": 2,
            "position": [
                800,
                0
            ],
            "id": "clean_node",
            "name": "Final Clean"
        },
        {
            "parameters": {
                "operation": "upsert",
                "dataTableId": {
                    "__rl": true,
                    "value": "MWNgETzBSi4cAIFo",
                    "mode": "list",
                    "cachedResultName": "News"
                },
                "filters": {
                    "conditions": [
                        {
                            "keyName": "url",
                            "keyValue": "={{ $json.url }}"
                        }
                    ]
                },
                "columns": {
                    "mappingMode": "defineBelow",
                    "value": {
                        "title": "={{ $json.title }}",
                        "url": "={{ $json.url }}",
                        "text": "={{ $json.cleanText }}",
                        "publishedDate": "={{ $json.publishedDate }}",
                        "isDelivered": false
                    }
                },
                "options": {}
            },
            "type": "n8n-nodes-base.dataTable",
            "typeVersion": 1.1,
            "position": [
                1000,
                0
            ],
            "id": "mongo_node",
            "name": "Upsert to News Table"
        }
    ],
    "connections": {
        "trigger_node": {
            "main": [
                [
                    {
                        "node": "tavily_node",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "tavily_node": {
            "main": [
                [
                    {
                        "node": "split_node",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "split_node": {
            "main": [
                [
                    {
                        "node": "jina_node",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "jina_node": {
            "main": [
                [
                    {
                        "node": "clean_node",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        },
        "clean_node": {
            "main": [
                [
                    {
                        "node": "mongo_node",
                        "type": "main",
                        "index": 0
                    }
                ]
            ]
        }
    }
}