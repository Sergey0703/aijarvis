      "parameters": {
        "jsCode": "const targets = $('MongoDB: Get Target Words').all().map(item => {\n  const data = item.json;\n  const wordLower = data.word.toLowerCase();\n  const audioUrl = `https://vocab.aimediaflow.net/audio/${encodeURIComponent(wordLower)}.mp3`;\n  \n  return {\n    _id: data._id,\n    word: data.word,\n    translate: data.translate,\n    transcript: data.transcript || '',\n    audio: audioUrl\n  };\n});\n\nconst distractors = $('MongoDB: Get Distractors').all().map(item => {\n  const data = item.json;\n  return {\n    _id: data._id,\n    word: data.word,\n    translate: data.translate\n  };\n});\n\nreturn [{ json: { \n  targets: targets,\n  distractors: distractors,\n  total: targets.length\n} }];"
      }
    },
