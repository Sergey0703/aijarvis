            "parameters": {
                "jsCode": "const items = $input.all();\n\nfor (const item of items) {\n  let text = item.json.raw_content || item.json.content || '';\n  \n  // Remove common HTML noise patterns\n  text = text\n    // Remove navigation menus\n    .replace(/\\[Products\\].*?\\[More\\]/gs, '')\n    .replace(/Main content/g, '')\n    \n    // Remove image markdown\n    .replace(/!\\[Image \\d+\\]\\([^)]+\\)/g, '')\n    \n    // Remove links but keep text\n    .replace(/\\[([^\\]]+)\\]\\([^)]+\\)/g, '$1')\n    \n    // Remove repeated asterisks (list markers)\n    .replace(/^\\s*\\*+\\s*/gm, '')\n    \n    // Remove common footer/header patterns\n    .replace(/Â©.*?All Rights Reserved\\.?/gi, '')\n    .replace(/Show more/g, '')\n    .replace(/Login or create.*?account/gi, '')\n    .replace(/Get started/g, '')\n    .replace(/Sign in to read.*?news/gi, '')\n    \n    // Remove excessive newlines\n    .replace(/\\n{3,}/g, '\\n\\n')\n    \n    // Trim whitespace\n    .trim();\n  \n  // Keep full content if substantial (min 200 chars)\n  if (text.length >= 200) {\n    item.json.cleanText = text; // FULL content, no limit\n  } else {\n    item.json.cleanText = item.json.content || text;\n  }\n}\n\nreturn items;"
            },
